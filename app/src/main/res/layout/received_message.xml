<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/message_time_text_view_margin"
        android:text="@string/message_time_text_view_default_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/message_time_color"
        android:textSize="@dimen/message_time_text_view_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/messageTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messageTextView" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/message_text_view_margin"
        android:layout_marginTop="@dimen/message_text_view_margin"
        android:background="@drawable/received_message_background"
        android:backgroundTint="@color/received_message_background_color"
        android:maxWidth="@dimen/message_text_view_max_width"
        android:padding="@dimen/message_text_view_padding"
        android:text="@string/message_text_view_default_text"
        android:textColor="@color/received_message_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="@dimen/message_text_view_line_height" />

</androidx.constraintlayout.widget.ConstraintLayout>
