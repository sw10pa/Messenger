<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="@dimen/user_avatar_image_view_size"
        android:layout_height="@dimen/user_avatar_image_view_size"
        android:layout_marginStart="@dimen/user_avatar_image_view_margin_start"
        android:background="@drawable/avatar_image_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nicknameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_nickname_text_view_margin_start"
        android:layout_marginTop="@dimen/user_nickname_text_view_margin_top"
        android:text="@string/user_nickname_text_view_default_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/user_nickname_text_view_text_color"
        android:textSize="@dimen/user_nickname_text_view_text_size"
        app:layout_constraintStart_toEndOf="@+id/avatarImageView"
        app:layout_constraintTop_toTopOf="@+id/avatarImageView" />

    <TextView
        android:id="@+id/occupationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_occupation_text_view_margin_top"
        android:text="@string/user_occupation_text_view_default_text"
        android:textColor="@color/user_occupation_text_view_text_color"
        android:textSize="@dimen/user_occupation_text_view_text_size"
        app:layout_constraintStart_toStartOf="@+id/nicknameTextView"
        app:layout_constraintTop_toBottomOf="@+id/nicknameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
